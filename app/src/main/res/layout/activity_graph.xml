<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.smn.cpfmaeklong.GraphActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PREV DAY"
        android:id="@+id/bt_prev_day" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NEXT DAY"
        android:id="@+id/bt_next_day"
        android:layout_above="@+id/graph_area"
        android:layout_alignRight="@+id/graph_area"
        android:layout_alignEnd="@+id/graph_area"
        android:clickable="true"
        android:enabled="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/graph_area"
        android:layout_below="@+id/bt_prev_day">

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txt_graph_date"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/bt_next_day"
        android:layout_alignBottom="@+id/bt_next_day"
        android:textAlignment="textEnd"
        android:layout_toRightOf="@+id/bt_prev_day"
        android:layout_toEndOf="@+id/bt_prev_day"
        android:gravity="center"
        android:text="date" />

</RelativeLayout>
