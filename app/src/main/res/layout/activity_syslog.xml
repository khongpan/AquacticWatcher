<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TIME"
        android:id="@+id/textView"
        android:textSize="20dp"
        android:layout_alignTop="@+id/textView2"
        android:layout_alignRight="@+id/btBack"
        android:layout_alignEnd="@+id/btBack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATA"
        android:id="@+id/textView2"
        android:textSize="20dp"
        android:layout_below="@+id/btNext"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/date2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:id="@+id/tvsch"
        android:textSize="12dp"
        android:textIsSelectable="false"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/btsch"
        android:hint="Search text" />

    <Button
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:text="Search"
        android:id="@+id/btsch"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btNext"
        android:layout_alignEnd="@+id/btNext"
        android:layout_toRightOf="@+id/tvsch"
        android:layout_toEndOf="@+id/tvsch" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text="&lt;"
        android:id="@+id/btBack"
        android:layout_below="@+id/btsch"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:text=">"
        android:id="@+id/btNext"
        android:layout_alignTop="@+id/btBack"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Select Day"
        android:id="@+id/textView3"
        android:layout_alignTop="@+id/btBack"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/textView2" />


</RelativeLayout>
